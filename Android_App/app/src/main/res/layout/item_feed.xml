<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/feed_item_bg"
    android:layout_marginTop="10dp">
    <!-- Title , include user,portrait ,time, position-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/portrait"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feed_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="feed owner"
                    android:textColor="@color/orange"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="time:           " />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- feed text -->
        <TextView
            android:id="@+id/feed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="....."
            android:textColor="@color/black"
            android:textSize="17dp" />

        <com.jaeger.ninegridimageview.NineGridImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/nine_gridView"
            android:layout_width="match_parent"
            app:imgGap="4dp"
            app:showStyle="fill"
            app:singleImgSize="200dp"/>

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="from:"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="10dp"/>

        <!--comment or like button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:id="@+id/share_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/share_unfilled_24"
                android:textColor="@color/gray"
                android:text="number"/>


            <Button
                android:paddingLeft="10dp"
                android:id="@+id/comment_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment_unfilled_24"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:text="number"/>


            <Button
                android:paddingLeft="10dp"
                android:id="@+id/like_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/heart_filled_24"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:text="number"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>